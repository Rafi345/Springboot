pipeline {
    agent any

    tools {
        maven 'maven' 
    }

    environment {
        SONARQUBE_URL = 'https://d6312cd2eccd.ngrok-free.app'
        SONARQUBE_TOKEN = credentials('Sonarqube_token') 
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'Gitkey_in_Jenkins', 
                    url: 'https://github.com/Rafi345/Springboot.git'
                sh 'ls -la'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                sh """
                    mvn sonar:sonar \
                        -Dsonar.projectKey=Basic_SpringBoot_Code_Rafi \
                        -Dsonar.host.url=https://d6312cd2eccd.ngrok-free.app \
                        -Dsonar.login="${SONARQUBE_TOKEN}"
                """
            }
        }
    }
}

